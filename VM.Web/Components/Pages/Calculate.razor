@page "/"
@using System.Globalization
@rendermode InteractiveServer

<PageTitle>Calculator</PageTitle>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Calculator</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-10">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Vehicle Type</label>
                                    <div class="col-sm-7">
                                        <select class="form-control" @onchange="TypeDropdownChange">
                                            <option value="0">Select</option>
                                            @foreach (var item in DropdownVehicleTypeList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Vehicle Price</label>
                                    <div class="col-sm-7">
                                        <input type="number" class="form-control" placeholder="Name" @bind-value="CalculatePrice.VehiclePrice" @onblur="() => CalculateTotalPriceHandler()">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (IsCalculated)
                    {
                        <div class="col-lg-6 border-left">
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-10">
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label">Vehicle Price:</label>
                                        <label class="col-sm-2 col-form-label col-md-3 text-right">@CalculatePrice.VehiclePrice.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label">Basic Fee:</label>
                                        <label class="col-sm-2 col-md-3 col-form-label text-right">@CalculatePrice.BasicFee.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label">Special Fee:</label>
                                        <label class="col-sm-2 col-md-3 col-form-label text-right">@CalculatePrice.SpecialFee.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label">Association Fee:</label>
                                        <label class="col-sm-2 col-md-3 col-form-label text-right">@CalculatePrice.AssociationFee.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label">Storage Fee:</label>
                                        <label class="col-sm-2 col-md-3 col-form-label text-right">@CalculatePrice.StorageFee.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                    <div class="form-group row mb-0">
                                        <label class="col-sm-3 col-form-label h5">Total Price:</label>
                                        <label class="col-sm-2 col-md-3 h5 col-form-label text-right">@CalculatePrice.TotalPrice.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
</div>